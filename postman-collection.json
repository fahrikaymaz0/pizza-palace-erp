{
  "info": {
    "name": "Dinamik ERP API Collection",
    "description": "Backendci tarafından Frontendci ve Mobilci için hazırlanan API koleksiyonu",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Swagger Dokümantasyonu",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/swagger",
          "host": ["{{baseUrl}}"],
          "path": ["swagger"]
        }
      }
    },
    {
      "name": "Kullanıcılar",
      "item": [
        {
          "name": "Tüm Kullanıcıları Getir",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users",
              "host": ["{{baseUrl}}"],
              "path": ["users"]
            }
          }
        },
        {
          "name": "Yeni Kullanıcı Ekle",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Yeni Kullanıcı\",\n  \"email\": \"yeni@example.com\",\n  \"password\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users",
              "host": ["{{baseUrl}}"],
              "path": ["users"]
            }
          }
        }
      ]
    },
    {
      "name": "Ürünler",
      "item": [
        {
          "name": "Tüm Ürünleri Getir",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/products",
              "host": ["{{baseUrl}}"],
              "path": ["products"]
            }
          }
        },
        {
          "name": "Kategoriye Göre Ürünler",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/products?category=electronics",
              "host": ["{{baseUrl}}"],
              "path": ["products"],
              "query": [
                {
                  "key": "category",
                  "value": "electronics"
                }
              ]
            }
          }
        },
        {
          "name": "Fiyat Aralığına Göre Ürünler",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/products?minPrice=1000&maxPrice=50000",
              "host": ["{{baseUrl}}"],
              "path": ["products"],
              "query": [
                {
                  "key": "minPrice",
                  "value": "1000"
                },
                {
                  "key": "maxPrice",
                  "value": "50000"
                }
              ]
            }
          }
        },
        {
          "name": "Yeni Ürün Ekle",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Yeni Ürün\",\n  \"price\": 999.99,\n  \"description\": \"Yeni ürün açıklaması\",\n  \"category\": \"electronics\",\n  \"stock\": 10\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/products",
              "host": ["{{baseUrl}}"],
              "path": ["products"]
            }
          }
        }
      ]
    },
    {
      "name": "Siparişler",
      "item": [
        {
          "name": "Tüm Siparişleri Getir",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/orders",
              "host": ["{{baseUrl}}"],
              "path": ["orders"]
            }
          }
        },
        {
          "name": "Duruma Göre Siparişler",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/orders?status=pending",
              "host": ["{{baseUrl}}"],
              "path": ["orders"],
              "query": [
                {
                  "key": "status",
                  "value": "pending"
                }
              ]
            }
          }
        },
        {
          "name": "Kullanıcının Siparişleri",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/orders?userId=1",
              "host": ["{{baseUrl}}"],
              "path": ["orders"],
              "query": [
                {
                  "key": "userId",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Yeni Sipariş Oluştur",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"1\",\n  \"products\": [\n    {\n      \"productId\": \"1\",\n      \"quantity\": 2,\n      \"price\": 89999.99\n    }\n  ],\n  \"totalAmount\": 179999.98\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/orders",
              "host": ["{{baseUrl}}"],
              "path": ["orders"]
            }
          }
        }
      ]
    }
  ]
}
